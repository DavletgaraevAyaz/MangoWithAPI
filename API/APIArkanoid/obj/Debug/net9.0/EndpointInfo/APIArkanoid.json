      "post": {
        "tags": [
          "Shop"
        ],
        "parameters": [
          {
            "name": "skinId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
